extends layout

block content
    div.mainContent
        section.containerFamily
            h2 WebDevelopment
            div.d-flex.flex-row
                each container in arrayContainerCatalog
                    if container.containerFamily === 'WebDevelopment'
                        include catalogContainer
        section.containerFamily
            h2 DataBases
            div.d-flex.flex-row
                each container in arrayContainerCatalog
                    if container.containerFamily === 'Databases'
                        include catalogContainer
        section.containerFamily
            h2 Operating Systems
            div.d-flex.flex-row
                each container in arrayContainerCatalog
                    if container.containerFamily === 'OS'
                        include catalogContainer
    if(chooseAContainer)
        div.modal.fade#addAContainerName(tabindex="-1", role="dialog", aria-labelledby="addAContainerName", aria-hidden="true")
            div.modal-dialog.chooseAName(role="document")
                div.modal-content
                    div.modal-header
                        h5.modal-title#exampleModalLabel Name your environment :
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;
                div.modal-body
                    form(action='/container/addNewContainer/create', method='post')
                        div.form-group
                            input#container-name.form-control(type="text", name="containerName", placeholder="CryptoPoly", required)
                            input#container-type.form-control(type="hidden", name="containerType")